@using dataModels.ViewModels
@model ChatViewModel
@{
    // string TouserGuidString = BitConverter.ToString(@Model.Userid);
} 
<div class="bg-outside text-light mt-5 py-3 px-3">
    <div class="userProfile chat-profile text-light text-center py-2 border-2 border-light borderCustom mb-2">
        @Model.FirstName @Model.LastName (@Model.PhoneNumber)
    </div>
    <div class="chatList text-light px-2 border border-2 border-white position-relative pt-3 overflow-auto bgChat">
        <div class="chat-content" style="height: 90%; overflow-y: auto;">
        @foreach (var msg in Model.commonUserModels)
        {
           
            <div class="message-container px-2">

                @if (msg.UserId != Model.ForFirstUser)
                {
                    <div class="msg-sent bgSender text-light mt-2 ps-2 pe-2 py-2 border border-white d-inline-block float-end">
                        @msg.Sms
                    </div>
                    <div class="clearfix"></div>
                    <div class="message-details text-end mt-1">
                        <div class="message-timestamp">
                            @msg.CreationTime?.ToString("dd MMMM yyyy HH:mm:ss") <span class="message-sender">(You)</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="msg-receive bg-dark text-light mt-2 ps-2 pe-2 py-2 border border-white position-relative d-inline-block">
                        @msg.Sms
                    </div>
                    <div class="message-details text-start mt-1">
                        <div class="message-timestamp">
                            @msg.CreationTime?.ToString("dd MMMM yyyy HH:mm:ss") <span class="message-sender">(@Model.FirstName @Model.LastName)</span>
                        </div>
                    </div>
                }
                <div class="clearfix"></div>
            </div>
        }
       </div>
        <div class="position-relative mb-custom" style="height:10% ;">
            <div class="message position-absolute bottom-1 start-50 translate-middle-x width98">
                <div class="d-flex justify-content-center">
                    <div class="w-75">
                        <textarea class="form-control bg-dark text-light" id="message-text" rows="1"
                                  placeholder="Enter your message here.."></textarea>
                    </div>
                    <div>
                        <button class="btn btn-primary border-white BtnHover  text-center" id="post-message" data-toUserId="@Model.Userid" type="button">
                            <i class="bi bi-send"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

</div>
