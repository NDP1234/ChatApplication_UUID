@using dataModels.Entities;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
 @model List<User>
@{
    Layout = null;
} 

<div class="card userlist">
    <div class="card-body">
        <h5 class="font-weight-bold mb-3 text-center text-lg-start">Users</h5>
        <ul class="list-unstyled mb-0">
        @foreach (var user in Model.Skip(1))
        {
            <li class="p-2 border-bottom" style="background-color: #eee;">
                    <a class="d-flex justify-content-between text-decoration-none ClickRow" data-UserGUID="@user.GuidforUser">
                    <div class="d-flex flex-row">
                        <div class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" style="width: 60px; height: 60px; background-color: #007bff; color: white; text-align: center; font-size: 24px;">
                            <span class="mx-auto my-auto">@user.FirstName[0]@user.LastName[0]</span>
                        </div>
                        <div class="pt-1">
                            <p class="fw-bold mb-0">@user.FirstName @user.LastName</p>
                            <p class="small text-muted">(@user.PhoneNumber)</p>
                        </div>
                    </div>
                </a>
            </li>
        }
        </ul>
</div>
</div>